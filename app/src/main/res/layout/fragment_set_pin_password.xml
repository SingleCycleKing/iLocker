<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.sample.applocker.view.fragment.SetPinPassword">

    <com.sample.applocker.view.widget.Indicator
        android:id="@+id/lock_indicator"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp" />

    <com.sample.applocker.view.widget.Keyboard
        android:id="@+id/lock_keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_padding" />
</LinearLayout>
